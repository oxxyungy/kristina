<script>
/* ===== Hearts background ===== */
const heartsEl = document.getElementById('hearts');
const heartChars = ['‚ù§','üíó','üíñ','üíò','üíù','üíï','üíì'];
for(let i = 0; i < 28; i++){
const h = document.createElement('div');
h.className = 'heart';
h.textContent = heartChars[i % heartChars.length];
h.style.left = (Math.random() * 100) + 'vw';
h.style.bottom = (-10 - Math.random() * 30) + 'vh';
h.style.animationDuration = (7 + Math.random() * 8) + 's';
h.style.animationDelay = (Math.random() * 8) + 's';
h.style.fontSize = (14 + Math.random() * 14) + 'px';
heartsEl.appendChild(h);
}
/* ===== Escaping "No" button ===== */
const noBtn = document.getElementById('noBtn');
const yesBtn = document.getElementById('yesBtn');
let escapeCount = 0;
const noTexts = [
'–ù–µ—Ç','–¢—ã —É–≤–µ—Ä–µ–Ω–∞?','–¢–æ—á–Ω–æ-—Ç–æ—á–Ω–æ?','–ü–æ–¥—É–º–∞–π –µ—â—ë!',
'–ê –µ—Å–ª–∏ —Ç–∞–∫?','–ù—É –ø–æ–∂–∞–∞–∞–ª—É–π—Å—Ç–∞!','–ù–µ –Ω–∞–∂–∏–º–∞–π!',
'–Ø —É–±–µ–≥–∞—é!','–ù–µ –ø–æ–π–º–∞–µ—à—å!','–•–∏-—Ö–∏! üòú',
'–ü–æ–ø—Ä–æ–±—É–π –µ—â—ë!','–õ–æ–≤–∏–∏–∏–∏!','üèÉüí®','–ù–µ–µ–µ–µ—Ç',
'–¢—É—Ç –º–µ–Ω—è –Ω–µ—Ç!','–ö—É-–∫—É!','–ú—è—É? üê±',
'–ù–µ–µ–µ–µ!','–û–ø—è—Ç—å?!','–°–¥–∞–≤–∞–π—Å—è!','–ñ–º–∏ –î–ê!',
'–Ø –±—ã—Å—Ç—Ä—ã–π!','–§–∏–≥ –ø–æ–π–º–∞–µ—à—å!','–ù—É –ª–∞–¥–Ω–æ... –Ω–µ—Ç!',
'–•–∞—Ö–∞ üòÇ','–¢—É–¥–∞ –Ω–µ —Å–º–æ—Ç—Ä–∏!','–ê –≤–æ—Ç –∏ –Ω–µ—Ç!',
'–ü–æ—á—Ç–∏... –Ω–µ—Ç!','üê±üí®','–ú–∏–º–æ!','–ù–µ —Ç—É–¥–∞!'
];
function escapeNo(){
escapeCount++;
noBtn.textContent = noTexts[escapeCount % noTexts.length];
// Make "Yes" button grow slowly with each attempt
const yesScale = Math.min(1.6, 1 + escapeCount * 0.02);
yesBtn.style.transform = 'scale(' + yesScale + ')';
// Shrink "No" very slowly
const noScale = Math.max(0.45, 1 - escapeCount * 0.02);
noBtn.style.fontSize = (16 * noScale) + 'px';
// Always escape across the whole screen
noBtn.style.position = 'fixed';
noBtn.style.zIndex = '999';
// Safe area with padding from edges
const pad = 15;
const maxX = window.innerWidth - noBtn.offsetWidth - pad;
const maxY = window.innerHeight - noBtn.offsetHeight - pad;
noBtn.style.left = (pad + Math.random() * Math.max(0, maxX - pad)) + 'px';
noBtn.style.top = (pad + Math.random() * Math.max(0, maxY - pad)) + 'px';
noBtn.style.transform = 'rotate(' + (Math.random() * 40 - 20) + 'deg)';
noBtn.style.transition = 'left 0.15s ease, top 0.15s ease';
}
noBtn.addEventListener('mouseenter', escapeNo);
noBtn.addEventListener('click', e => { e.preventDefault(); escapeNo(); });
noBtn.addEventListener('touchstart', e => { e.preventDefault(); escapeNo(); }, {passive:false});
noBtn.addEventListener('focus', escapeNo);
/* ===== "Yes" ‚Äî celebration! ===== */
yesBtn.addEventListener('click', celebrate);
function celebrate(){
document.getElementById('mainCard').style.display = 'none';
noBtn.style.display = 'none';
const success = document.getElementById('success');
success.classList.add('active');
spawnBouncingCats();
burstConfetti();
showSideCats();
// Keep spawning confetti
setInterval(burstConfetti, 4500);
}
/* Bouncing cat GIFs along the bottom */
function spawnBouncingCats(){
const layer = document.getElementById('catsLayer');
const catUrl = 'https://media.tenor.com/haCLNpCo1UYAAAAi/cat-jump.gif';
const positions = [3, 15, 28, 42, 56, 70, 84, 95];
positions.forEach((pos, i) => {
const img = document.createElement('img');
img.src = catUrl;
img.className = 'jumping-cat';
img.style.left = pos + '%';
img.style.animationDelay = (i * 0.25) + 's';
img.style.animationDuration = (1.3 + Math.random() * 0.8) + 's';
layer.appendChild(img);
});
}
/* Confetti burst */
function burstConfetti(){
const colors = ['#ff4fa3','#ff7bd1','#f39c12','#9b59b6','#3498db','#2ecc71','#ff69b4','#e74c3c'];
const shapes = ['‚ù§Ô∏è','üíï','‚ú®','üåü','üíñ','üéâ','üéä','üíó'];
for(let i = 0; i < 60; i++){
setTimeout(() => {
const el = document.createElement('div');
el.className = 'confetti-piece';
el.style.left = (Math.random() * 100) + '%';
el.style.animationDuration = (2.5 + Math.random() * 2.5) + 's';
if(Math.random() > 0.45){
el.textContent = shapes[Math.floor(Math.random() * shapes.length)];
el.style.fontSize = (14 + Math.random() * 18) + 'px';
} else {
const size = 6 + Math.random() * 8;
el.style.width = size + 'px';
el.style.height = size + 'px';
el.style.background = colors[Math.floor(Math.random() * colors.length)];
el.style.borderRadius = Math.random() > .5 ? '50%' : '2px';
}
document.body.appendChild(el);
setTimeout(() => el.remove(), 5500);
}, i * 40);
}
}
/* Side Tenor cats (desktop only) */
function showSideCats(){
document.getElementById('catLeft').style.display = 'block';
document.getElementById('catRight').style.display = 'block';
if(!document.getElementById('tenorJs')){
const s = document.createElement('script');
s.id = 'tenorJs';
s.src = 'https://tenor.com/embed.js';
s.async = true;
document.body.appendChild(s);
}
}
</script>
